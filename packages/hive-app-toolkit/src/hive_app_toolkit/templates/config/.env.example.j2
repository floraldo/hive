# {{ app_name }} Environment Configuration

# Application
APP_NAME={{ app_name }}
ENVIRONMENT=development
LOG_LEVEL=INFO
{% if service_type == 'api' or service_type == 'webhook' %}
# API Settings
HOST=0.0.0.0
PORT={{ port }}
{% endif %}
{% if needs_database or enable_database %}
# Database
DATABASE_PATH=data/{{ app_name }}.db
{% endif %}
{% if needs_cache or enable_cache %}
# Cache
CACHE_ENABLED=true
CACHE_TTL=3600
{% endif %}
{% if cost_limits %}
# Cost Limits
DAILY_COST_LIMIT={{ cost_limits.daily }}
MONTHLY_COST_LIMIT={{ cost_limits.monthly }}
PER_OPERATION_LIMIT={{ cost_limits.per_operation }}
{% endif %}
