# EcoSystemiser App-Specific Settings - Example
# Copy this file to .env for local development
# Global API keys are automatically loaded from Hive's .env.shared

# App-specific server configuration
ECOSYSTEMISER_PORT=8001
ECOSYSTEMISER_HOST=0.0.0.0
ECOSYSTEMISER_WORKERS=4

# App directories
ECOSYSTEMISER_CACHE_DIR=./cache
ECOSYSTEMISER_DATA_DIR=./data
ECOSYSTEMISER_LOG_LEVEL=INFO

# Performance settings
ECOSYSTEMISER_MAX_BATCH_SIZE=100
ECOSYSTEMISER_MAX_REQUEST_SIZE_MB=100

# Rate limiting overrides (optional)
RATE_LIMIT_NASA_POWER=30
RATE_LIMIT_METEOSTAT=60
RATE_LIMIT_ERA5=10
RATE_LIMIT_PVGIS=20

# Feature flags
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_METRICS=true
ENABLE_TRACING=false

# Development settings
DEBUG=false
TEST_MODE=false
MOCK_EXTERNAL_APIS=false

# Climate analysis settings
DATA_QUALITY_MIN_SCORE=75
DATA_GAP_MAX_HOURS=24
DEFAULT_TEST_LOCATION=London,UK
DEFAULT_TEST_LAT=51.5074
DEFAULT_TEST_LON=-0.1278

# Observability
METRICS_COLLECTION_INTERVAL=60
METRICS_RETENTION_DAYS=30
LOG_FORMAT=console
LOG_TO_FILE=true

# NOTE: Global API keys come from Hive's .env.shared automatically:
# OPENAI_API_KEY, ANTHROPIC_API_KEY, NASA_POWER_API_KEY, etc.
# This file is for EcoSystemiser-specific settings only!