# Production-ready Dockerfile generated by Hive Application Toolkit
FROM python:3.11-slim as builder

WORKDIR /app

# Install build dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy poetry files
COPY pyproject.toml poetry.lock* ./

# Install poetry and dependencies
RUN pip install --no-cache-dir poetry==1.7.1 && \
    poetry config virtualenvs.create false && \
    poetry install --no-dev --no-interaction --no-ansi

# Production stage
FROM python:3.11-slim

ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    NOTIFICATION_SERVICE_ENV=production

# Create non-root user
RUN useradd -m -u 1000 appuser && \
    mkdir -p /app/data /app/logs /app/cache && \
    chown -R appuser:appuser /app

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy Python packages from builder
COPY --from=builder /usr/local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

WORKDIR /app

# Copy application code
COPY --chown=appuser:appuser src/ ./src/

# Copy hive packages (in production, would come from registry)
COPY --chown=appuser:appuser ../../packages/hive-app-toolkit /packages/hive-app-toolkit
COPY --chown=appuser:appuser ../../packages/hive-logging /packages/hive-logging
COPY --chown=appuser:appuser ../../packages/hive-performance /packages/hive-performance
COPY --chown=appuser:appuser ../../packages/hive-cache /packages/hive-cache
COPY --chown=appuser:appuser ../../packages/hive-config /packages/hive-config
COPY --chown=appuser:appuser ../../packages/hive-errors /packages/hive-errors

# Set Python path
ENV PYTHONPATH=/app/src:/packages/hive-app-toolkit/src:/packages/hive-logging/src:/packages/hive-performance/src:/packages/hive-cache/src:/packages/hive-config/src:/packages/hive-errors/src

# Environment configuration
ENV NOTIFICATION_SERVICE_HOST=0.0.0.0 \
    NOTIFICATION_SERVICE_PORT=8000 \
    NOTIFICATION_SERVICE_WORKERS=4 \
    NOTIFICATION_SERVICE_LOG_LEVEL=INFO

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Switch to non-root user
USER appuser

# Expose port
EXPOSE 8000

# Run the application
CMD ["python", "-m", "notification_service.main"]

# Metadata
LABEL maintainer="Hive Team" \
      app.name="notification-service" \
      app.version="1.0.0" \
      app.description="Production-ready notification service built with Hive Application Toolkit" \
      toolkit="hive-app-toolkit"
